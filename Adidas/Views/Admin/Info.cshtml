                                        <span>بله</span>
                                    }
                                    else
                                    {
                                        <span>خیر</span>

                                    }


                                }


                            </p>

                            <p>
                                @Html.LabelFor(p => p.RelationShip1.Moaref):
                                @{
                                    if (Model.RelationShip1 != null)
                                    {
                                        if (Model.RelationShip1.Moaref)
                                        {
                                            <span>دارد</span>
                                        }
