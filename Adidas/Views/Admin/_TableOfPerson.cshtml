@model IEnumerable<Adidas.Models.DomainModels.Person>

<div class="row table-responsive">

    @{
        if (Model != null)
        {
            <table class="table table-striped table-hover table-bordered ">
                <thead>
                    <tr class="info">
                        <th>#</th>
                        <th class="text-center col-xs-2">نام و نام خانوادگی</th>
                        <th class="text-center col-xs-2">تاریخ تولد</th>
                        <th class="text-center col-xs-2">وضعیت تاهل</th>
                        <th class="text-center col-xs-2">کدملی</th>
                        <th class="text-center col-xs-2">آخرین مدرک تحصیلی</th>
                        <th class="text-center col-xs-2">تاریخ ثبت نام</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int x = 0;
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(x = x + 1)</td>
                            <td>@Html.ActionLink(@item.Name + "  " + @item.LastName, "Info", "Admin", new { id = item.Id }, null)</td>
                            <td>
                                @{
                                    <span> @item.BirthDay.Value.ToPersianDateString().Substring(0,4)</span>
                                    TimeSpan r = DateTime.Now.Subtract(item.BirthDay.Value);
                                    int years = (int)(r.Days / 365.25);
                                    <span>( @years.ToString() سال)</span>
                                }


                            </td>
                            <td>
                                @{
                                    if (item.Marriage == true)
                                    {
                                        <span>مجرد</span>
                                    }
                                    else
                                    {
                                        <span>متاهل</span>
                                    }
                                }
                            </td>
                            <td>@item.NationalCode</td>
                            <td>
                                @{
                                    var ttt = DropDown.GetDegreeList();
                                    if (item.Degree == 0)
                                    {

                                        @ttt.ElementAt(0).Text
                                    }
                                    else if (item.Degree == 1)
                                    {
                                        @ttt.ElementAt(1).Text
                                    }
                                    else if (item.Degree == 2)
                                    {
                                        @ttt.ElementAt(2).Text
                                    }
                                    else if (item.Degree == 3)
                                    {
                                        @ttt.ElementAt(3).Text
                                    }
                                    else if (item.Degree == 4)
                                    {
                                        @ttt.ElementAt(4).Text

                                    }
                                    else if (item.Degree == 5)
                                    {
                                        @ttt.ElementAt(5).Text

                                    }



                                }

                            </td>
                            <td>@item.RegPerson.Value.ToPersianDateString()</td>


                        </tr>
                    }




                </tbody>
            </table>
        }
    }

</div>

<style>
    table a:not(.btn), .table a:not(.btn) {
        text-decoration: none;
    }
</style>